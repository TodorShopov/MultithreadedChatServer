import java.util.*;
import java.io.*;

public class UserInfo {

	private String filePath;
	private ArrayList<String> userInformation;

	public UserInfo(int port) {
		filePath = "E:\\userInformation" + port + ".txt";
		userInformation = new ArrayList<String>();

		readDataMethod();

		System.out.println("Users that have been registered: ");
		for (int i = 0; i < userInformation.size(); i++) {
			System.out.println(userInformation.get(i));
		}

	}

	public void readDataMethod() {
		String currentLine;

		File file = new File(filePath);
		try {
			boolean isCreated = file.createNewFile();
			if (isCreated) {
				System.out.println("File created.");
			} else {
				System.out.println("File exists. ");
			}

			BufferedReader br = new BufferedReader(new FileReader(filePath));

			while ((currentLine = br.readLine()) != null) {
				userInformation.add(currentLine);
			}

			if (br != null) {
				br.close();
			}

		} catch (FileNotFoundException e) {

			System.out.println("Unable to find user information.");

		} catch (IOException e) {

			System.out.println("Error reading user information.");

		}

	}

	public boolean freeUsernameMethod(String username) {
		for (int i = 0; i < userInformation.size(); i++)
			if (username.equals(userInformation.get(i).split(" ")[0])) {
				return false;
			}

		return true;
	}

	public boolean hasUserMethod(String user) {
		for (int i = 0; i < userInformation.size(); i++)
			if (user.equals(userInformation.get(i))) {
				return true;
			}

		return false;
	}

	public boolean registerUserMethod(String user) {
		if (!freeUsernameMethod(user.split(" ")[0])) {
			return false;

		}

		try {
			BufferedWriter bw = new BufferedWriter(new FileWriter(filePath, true));

			bw.write(user + "\n");
			bw.write(System.getProperty("line.separator"));
			bw.flush();

			if (bw != null) {
				bw.close();
			}

			userInformation.add(user);
		} catch (IOException e) {
			System.out.println("IO exception registering user. ");
			return false;
		}
		return true;
	}

}
